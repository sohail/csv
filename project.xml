<Project DefaultTargets="Build" ToolsVersion="16.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <ItemGroup>
        <ProjectConfiguration Include="Debug|Win32">
            <Configuration>Debug</Configuration>
            <Platform>Win32</Platform>
        </ProjectConfiguration>
        <ProjectConfiguration Include="Debug|x64">
            <Configuration>Debug</Configuration>
            <Platform>x64</Platform>
        </ProjectConfiguration>      
    </ItemGroup>
    <Import Project="$(VCTargetsPath)\Microsoft.Cpp.default.props" />
    <PropertyGroup>
        <ConfigurationType>Application</ConfigurationType>
        <!-- <OutputType>Exe</OutputType> -->       
        <!-- <BaseOutputPath>Example-Application</BaseOutputPath> -->
        <!-- <OutputPath>Example-Application</OutputPath> -->
        <!-- <AssemblyName>main</AssemblyName> -->
        <TargetName>main</TargetName>
        <PlatformToolset>v141</PlatformToolset>
    </PropertyGroup>
    <Import Project="$(VCTargetsPath)\Microsoft.Cpp.props" />
    <!--<ItemDefinitionGroup>
        <ClCompile>
            <PreprocessorDefinitions Condition="'$(CSVPreprocessorDefinitions)'==''">CSV_EXAMPLE_APPLICATION</PreprocessorDefinitions>
        </ClCompile>
    </ItemDefinitionGroup> -->
    <ItemGroup>        
        <ClCompile Include="lib/sundry/cooked_rand.cc" />
        <ClCompile Include="lib/sundry/cooked_read.cc" />        
        <ClCompile Include="Example-Application/main.cc" />
    </ItemGroup>
    <ItemGroup>        
        <ClInclude Include="Example-Application/main.hh" />
    </ItemGroup>
    <Import Project="$(VCTargetsPath)\Microsoft.Cpp.Targets" />
    <Target Name="move" AfterTargets="AfterBuild" Condition="'$(ConfigurationType)'=='Application'">
        <Move SourceFiles="$(Configuration)\$(TargetName).exe" DestinationFiles="$(TargetName).exe" />
        <Message Text="Moved executable file." Importance="high" />
    </Target>
</Project>